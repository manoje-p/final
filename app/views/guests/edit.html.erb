<%= form_for @guests do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :gift %>
    <%= form.text_field :gift, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :wording %>
    <%= form.text_field :wording, class: "form-control" %>
  </div>
  <%= form.button 'Update Guest', class: "btn btn-success" %>
<% end %>