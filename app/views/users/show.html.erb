<div class="col-md-11 actors">
      <table class="table">
      <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Gift</th>
      <th>Wording</th>
      <th></th>
      </tr>
      <% @users.guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.address %></td>
        <td><%= guest.gift %></td>
        <td><%= guest.wording %></td>
        <td>

      <%= link_to "Edit", edit_guest_url(guest), class: 'btn btn-sm btn-primary' %>
      <%= link_to "Delete", guest_url(guest), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Seriously?' } %>
      </td></tr>
      <% end %>

	 <tr><%= form_for @guests do |form| %>
